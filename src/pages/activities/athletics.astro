---
import Base from "~/layouts/BaseLayout.astro";
import PageHero from "~/components/PageHero.astro";
import { site } from "~/site.config";

const title = "Athletics";
const subtitle = "Bulldogs";
const description = "";

// Breadcrumbs: last item is current page (no href)
const breadcrumb = [
  { label: "Home", href: "/" },
  { label: "Activities" },
  { label: title },
];
---

<Base title={`${title} | ${site.name}`} description={description}>
  <PageHero title={title} subtitle={subtitle} breadcrumb={breadcrumb} />

  <article
    class="prose prose-slate md:prose-lg mx-auto max-w-3xl px-4 py-10
           prose-a:text-bulldog-orange prose-a:no-underline hover:prose-a:underline
           prose-img:rounded-xl prose-headings:font-semibold"
  >
    <h2 class="text-2xl font-semibold mb-4">MMHS Athletics</h2>
  </article>
  <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3 mx-auto max-w-4xl">
    <article class="rounded-2xl border bg-white p-5 shadow-sm hover:shadow-md">
      <h3 class="text-lg font-semibold">MMHS Bulldogs Youtube Channel</h3>
      <p class="mt-2 text-sm text-slate-600">
        <a class="link" href="http://www.youtube.com/@MMHSBulldogs">
          @MMHSBulldogs</a
        >
      </p>
    </article>
  </div>

  <section class="mx-auto max-w-7xl px-4 py-10">
    <!-- Page content -->
    <!--GRID TEMPLATE -->
    <article
      class="prose prose-slate md:prose-lg mx-auto max-w-3xl px-4 py-8
           prose-a:text-bulldog-orange prose-a:no-underline hover:prose-a:underline"
    >
      <p>
        <a href="https://www.bulldogathletics1.com/">Athletics Schedules</a>
      </p>
    </article>
  </section>
</Base>
