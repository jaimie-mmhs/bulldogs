---
import Base from "@/layouts/BaseLayout.astro";
import PageHero from "@/components/PageHero.astro";
import { site } from "~/site.config";

import StaffCard from "@/components/StaffCard.astro";
import staff from "@/stub/staff.json";
const title = "Faculty & Staff";
const subtitle = "";
const description = "";

// Breadcrumbs: last item is current page (no href)
const breadcrumb = [
  { label: "Home", href: "/" },
  { label: "About" },
  { label: title },
];
---

<Base title={`${title} | ${site.name}`} description={description}>
  <PageHero title={title} subtitle={subtitle} breadcrumb={breadcrumb} />
  <section class="mx-auto max-w-6xl px-4 py-10">
    <div class="grid gap-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
      {staff.map((s) => <StaffCard entry={{ data: s }} />)}
    </div>
  </section>
</Base>
