---
import Base from '~/layouts/BaseLayout.astro';
import PageHero from '~/components/PageHero.astro';
---
<Base title="School Calendar">
  <PageHero title="School Calendar" />
  <section class="mx-auto max-w-5xl px-4 py-8">
    <div class="aspect-video w-full">
      <!-- Replace the src with your public calendar embed URL -->
      <iframe src="https://calendar.google.com/calendar/embed?src=YOUR_CALENDAR_ID"
              class="w-full h-[70vh]" frameborder="0"></iframe>
    </div>
  </section>
</Base>