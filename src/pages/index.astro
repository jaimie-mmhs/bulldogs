---
import Base from '~/layouts/BaseLayout.astro';
import PageHero from '~/components/PageHero.astro';
---
<Base title="Home">
  <PageHero title="Machias Memorial High School" subtitle="Home of the Bulldogs" />
  
    <article
    class="prose prose-slate md:prose-lg mx-auto max-w-3xl px-4 py-10
           prose-a:text-bulldog-orange prose-a:no-underline hover:prose-a:underline
           prose-img:rounded-xl prose-headings:font-semibold"
  >
    <h2>Machias Memorial High School</h2>
    <p>Keeping it R.E.A.L.</p>
    <p>MMHS Graduates are Ready, and Engaged to Advance in Life.</p>
  </article>

<div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
    <article class="rounded-2xl border bg-white p-5 shadow-sm hover:shadow-md">
    <h3 class="text-lg font-semibold"><a class="link" href="/calendar">SchoolCalendar</a></h3>
    <p class="mt-2 text-sm text-slate-600">
      View all of our school's upcoming events
    </p>
    </article>

    <article class="rounded-2xl border bg-white p-5 shadow-sm hover:shadow-md">
    <h3 class="text-lg font-semibold"><a class="link" href="https://aos96.powerschool.com">PowerSchool</a></h3>
    <p class="mt-2 text-sm text-slate-600">
      Login and track your student's grades and attendance
    </p>
    </article>

    <article class="rounded-2xl border bg-white p-5 shadow-sm hover:shadow-md">
    <h3 class="text-lg font-semibold"><a class="link" href="https://bulldogathletics1.com">Athletics Calendar</a></h3>
    <p class="mt-2 text-sm text-slate-600">
      Check out our athletics calendar for up-to-date game schedules
    </p>
    </article>
  </div>

  <section class="mx-auto max-w-7xl px-4 py-10 grid gap-6 md:grid-cols-3">
    <a class="border rounded-xl p-6 bg-white shadow-sm hover:shadow-md" href="/calendar">Calendar</a>
    <a class="border rounded-xl p-6 bg-white shadow-sm hover:shadow-md" href="https://www.bulldogathletics1.com/">Athletics</a>
    <a class="border rounded-xl p-6 bg-white shadow-sm hover:shadow-md" href="https://aos96.powerschool.com/public/">PowerSchool</a>
    <a class="border rounded-xl p-6 bg-white shadow-sm hover:shadow-md" href="/activities">Activities</a>
    <a class="border rounded-xl p-6 bg-white shadow-sm hover:shadow-md"  href="https://docs.google.com/document/d/1SS0neju6cQq42slGNz3x3HSrtkfqMX4d7Q1a9dx7cqE/preview?tab=t.0">Student Handbook</a>
  </section>
</Base>