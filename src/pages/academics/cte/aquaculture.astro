---
import Base from "~/layouts/BaseLayout.astro";
import PageHero from "~/components/PageHero.astro";
import { site } from "~/site.config";

const title = "Aquaculture";
const description = "Grow knowledge. Harvest success.";

// Breadcrumbs: last item is current page (no href)
const breadcrumb = [
  { label: "Home", href: "/" },
  { label: "Academics" },
  { label: title },
];
---

<Base title={`${title} | ${site.name}`} description={description}>
  <PageHero title={title} breadcrumb={breadcrumb} />

  <article
    class="prose prose-slate md:prose-lg mx-auto max-w-3xl px-4 py-10
           prose-a:text-bulldog-orange prose-a:no-underline hover:prose-a:underline
           prose-img:rounded-xl prose-headings:font-semibold"
  >
    <h2>From Tank to Table</h2>
    <p>
      Course topics include fish ecology, anatomy and physiology, water quality, aquaponics, and commercial and recreational management operations. Emphasis is placed on hands-on skill acquisition. Students will also explore educational and career opportunities in this rapidly growing field.
    </p>
<img src="/assets/aquaculture.jpg" />
  </article>

    

    </div>
  </section>
</Base>

