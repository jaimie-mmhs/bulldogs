---
import Base from "~/layouts/BaseLayout.astro";
import PageHero from "~/components/PageHero.astro";
import { site } from "~/site.config";

const title = "JMG";
const subtitle = "Jobs for Maine Graduates";
const description = "Student-centered. Results driven.";

// Breadcrumbs: last item is current page (no href)
const breadcrumb = [
  { label: "Home", href: "/" },
  { label: "Academics" },
  { label: title },
];
---

<Base title={`${title} | ${site.name}`} description={description}>
  <PageHero title={title} subtitle={subtitle} breadcrumb={breadcrumb} />

  <article
    class="prose prose-slate md:prose-lg mx-auto max-w-3xl px-4 py-10
           prose-a:text-bulldog-orange prose-a:no-underline hover:prose-a:underline
           prose-img:rounded-xl prose-headings:font-semibold"
  >
    <h2>What We Do</h2>
    <p>
      JMG partners with public education and private businesses to offer
      results-driven solutions to ensure all Maine students graduate, attain
      post-secondary credentials and pursue meaningful careers.
    </p>
  </article>

  <section class="not-prose mx-auto max-w-7xl px-4 py-8">
    <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
      <a
        href="https://www.jmg.org"
          <article
            class="rounded-2xl border bg-white p-5 shadow-sm hover:shadow-md"
          >
            <h4 class="text-lg font-semibold">JMG Website</h4>
            <p class="mt-2 text-sm text-slate-600">jmg.org
          </p>
        </article>
      </a
    </div>
  </section>
</Base>
