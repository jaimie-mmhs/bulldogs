---
import Base from '@/layouts/BaseLayout.astro';
// If you already have a hero/banner component, keep it.
// Otherwise this inline hero is fine for now.
const title = 'Library';
---

<Base title={title}>
  <!-- Page hero -->
  <header class="bg-mmhs-orange text-white">
    <div class="mx-auto max-w-5xl px-4 py-10">
      <h1 class="text-3xl md:text-4xl font-bold tracking-tight">MMHS Library</h1>
      <p class="mt-2 opacity-90">Resources, catalogs, and support for students and staff</p>
    </div>
  </header>

  <!-- Quick links row (cards) -->
  <section class="mx-auto max-w-5xl px-4 py-8">
    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
      <!-- Replace hrefs with real links -->
      <a href="https://mmhsbulldogs.follettdestiny.com/" class="group block rounded-2xl border p-5 hover:shadow-md focus:outline-none focus:ring">
        <h2 class="text-lg font-semibold flex items-center justify-between">
          MMHS Library Catalog
          <span class="text-sm font-medium opacity-60 group-hover:opacity-100">↗</span>
        </h2>
        <p class="mt-1 text-sm opacity-80">Search books and media</p>
      </a>
    </div>
  </section>

  <!-- Main content: paste the text from the old page here -->
  <section class="mx-auto max-w-5xl px-4 pb-12">
    <div class="grid lg:grid-cols-3 gap-10">
      <!-- Left: rich text (auto-styled with prose) -->
      <article class="prose prose-neutral max-w-none lg:col-span-2">
        <!-- Replace everything below with your actual content (copy from old WP editor content, NOT the Divi chrome) -->

        <h2>About the Library</h2>
        <p>Welcome to the Machias Memorial High School Library. </p>

        <h3>Hours</h3>
        <ul>
          <li>Mon–Fri: 7:45 AM – 2:30 PM</li>
          <li>Closed on school holidays and early-release days</li>
        </ul>

        <h3>Borrowing & Returns</h3>
        <p>Students may check out materials for two weeks and renew as needed unless another patron has placed a hold.</p>

        <h3>Policies</h3>
        <ul>
          <li>Be considerate: quiet voices, headphones for audio.</li>
          <li>Follow the school’s acceptable use policy for devices.</li>
        </ul>

        <h3>Helpful Links</h3>
        <ul>
          <li><a href="https://library.digitalmaine.org">Digital Maine Library</a></li>
          <li><a href="https://www.easybib.com">Easy Bib</a></li>
          <li><a href="https://www.grammarly.com">Grammarly</a></li>
          <li><a href="http://www.porter.lib.me.us">Porter Memorial Library</a></li>
          <li><a href="https://scholar.google.com">Google Scholar</a></li>
          <li><a href="https://owl.purdue.edu">Purdue Writing Lab</a></li>
          <li><a href="https://www.bangordailynews.com">Bangor Daily News</a></li>
          <li><a href="https://www.machiasnews.com">Machias Valley News Observer</a></li>
        </ul>

        <!-- End replace -->
      </article>

      <!-- Right: sticky info card -->
      <aside class="lg:sticky lg:top-20 self-start">
        <div class="rounded-2xl border p-5">
          <h2 class="text-xl font-semibold">Contact</h2>
          <p class="mt-2 text-sm opacity-90">
            <strong>Librarian:</strong> Wendy Schoppee<br/>
            <a href="mailto:wschoppee@mmhsbulldogs.org">wschoppee@mmhsbulldogs.org</a><br/>
            (207) 255-3812
          </p>
        </div>

        <!-- Optional callout -->
        <div class="mt-4 rounded-2xl bg-black text-white p-5">
          <p class="text-sm">
            Tip: Need citation help? Try our MLA/APA quick guides or ask the librarian.
          </p>
        </div>
      </aside>
    </div>
  </section>
</Base>
