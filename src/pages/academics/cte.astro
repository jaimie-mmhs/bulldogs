---
/**
 * CTE page formatted like the Library page
 * - Reuses your site header/footer via the Base layout
 * - Library-style title bar + breadcrumb
 * - Narrow prose column for content
 */
import Base from '~/layouts/BaseLayout.astro'; 
import PageHero from '~/components/PageHero.astro';
import { site } from '~/site.config';

const title = 'CTE';
const subtitle = 'Career & Technical Education ';
const description = 'High school students choose to enroll in CTE program because of the incredible opportunities they provide. Students learn about and use cutting edge equipment and technologies with professional mentors who are deeply connected in their industry. CTE programs prepare students for college and a wide range of high-wage and high demand careers.';

// breadcrumbs
const breadcrumb = [
  { label: 'Home', href: '/' },
  { label: title } // current page
];
---

<Base title={`${title} | ${site.name}`} description={description} breadcrumb={breadcrumb}>
    <Fragment slot="hero">
        <PageHero title={title} subtitle={subtitle} />
    </Fragment>
  <section class="mx-auto max-w-7xl px-4 py-10">
      <h2 class="text-2xl font-semibold mb-4">About CTE</h2>
      <p class="text-slate-700">
        Our CTE programs provide students with real-world skills, industry exposure,
        and pathways to high-demand careers and further education. dooood
      </p>

      <h2>Programs</h2>
      <ul>
        <li>Building Trades</li>
        <li>Health Occupations</li>
        <li>Information Technology</li>
        <li>Automotive Technology</li>
        <li>Culinary Arts</li>
      </ul>

      <h2>How to Enroll</h2>
      <p>
        Talk with your school counselor or contact the CTE coordinator to discuss program
        requirements, schedules, and transportation.
      </p>

      <h3>CTE Coordinator</h3>
      <p>
        Email: <a href="mailto:cte@mmhsbulldogs.org">cte@mmhsbulldogs.org</a><br />
        Phone: <a href="tel:+1-207-000-0000">(207) 000-0000</a>
      </p>

      <!-- If the Library page uses callouts/cards, match the style here -->
      <div class="not-prose mt-8 grid gap-4 sm:grid-cols-2">
        <a href="/cte/handbook" class="block rounded-xl border p-4 hover:border-bulldog-orange hover:bg-slate-50">
          <h4 class="font-semibold">CTE Handbook</h4>
          <p class="mt-1 text-sm text-slate-600">Policies, expectations, and resources.</p>
        </a>
        <a href="/cte/partners" class="block rounded-xl border p-4 hover:border-bulldog-orange hover:bg-slate-50">
          <h4 class="font-semibold">Industry Partners</h4>
          <p class="mt-1 text-sm text-slate-600">Local employers and work-based learning.</p>
        </a>
      </div>
  </section>
</Base>



