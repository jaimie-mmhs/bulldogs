---
import Base from '~/layouts/BaseLayout.astro';
import PageHero from '~/components/PageHero.astro';
import { site } from '~/site.config';

const title = 'Page Title';
const subtitle = 'Optional subtitle';
const description = 'Short page description for SEO.';

// Breadcrumbs: last item is current page (no href)
const breadcrumb = [
  { label: 'Home', href: '/' },
  { label: 'Section', href: '/section' },
  { label: title }
];
---

<Base title={`${title} | ${site.name}`} description={description} breadcrumb={breadcrumb}>
  <Fragment slot="hero">
    <PageHero title={title} subtitle={subtitle} />
  </Fragment>

  <section class="mx-auto max-w-7xl px-4 py-10">
    <!-- Page content -->
    <h2 class="text-2xl font-semibold mb-4">Section heading</h2>
    <p class="text-slate-700">
      Your content goes here.
    </p>
  </section>
</Base>
