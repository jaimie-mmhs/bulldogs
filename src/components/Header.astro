---
import { site } from '~/site.config';
const nav = site.nav;
---
<header class="bg-white text-slate-800 border-b">
  <div class="mx-auto max-w-7xl px-4 py-4 flex items-center justify-between">
    <a href="/" class="font-semibold text-lg tracking-wide text-bulldog-orange">{site.name}</a>
    <nav class="hidden md:flex gap-6">
      {nav.map((item) => (
        item.children ? (
          <div class="relative group">
            <a href={item.href ?? '#'} class="hover:text-bulldog-orange inline-flex items-center">
              {item.label}
              <svg viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" class="ml-1 h-4 w-4 opacity-70 group-hover:opacity-100"><path d="M5.23 7.21a.75.75 0 011.06.02L10 10.94l3.71-3.71a.75.75 0 111.06 1.06l-4.24 4.24a.75.75 0 01-1.06 0L5.21 8.29a.75.75 0 01.02-1.08z"/></svg>
            </a>
            <div class="invisible opacity-0 group-hover:visible group-hover:opacity-100 transition pointer-events-none group-hover:pointer-events-auto absolute left-0 mt-2 min-w-[14rem] rounded-xl border bg-white shadow-lg">
              <ul class="py-2">
                {item.children.map((child) => (
                  <li>
                    <a class="block px-4 py-2 text-sm hover:bg-slate-50 hover:text-bulldog-orange" href={child.href}>{child.label}</a>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        ) : (
          <a class="hover:text-bulldog-orange" href={item.href}>{item.label}</a>
        )
      ))}
    </nav>
  </div>
</header>